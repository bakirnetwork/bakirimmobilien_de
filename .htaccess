<IfModule mod_rewrite.c>
	RewriteEngine On

	# Rewrite to .www
	RewriteCond %{HTTPS} !=on
	RewriteCond %{HTTP_HOST} !^www\. [NC]
	RewriteCond %{HTTP_HOST} !\.dev$
	RewriteCond %{SERVER_ADDR} !=127.0.0.1
	RewriteCond %{SERVER_ADDR} !=::1
	RewriteRule ^ http://www.%{HTTP_HOST}%{REQUEST_URI} [R=301,L]

	# Rewrite property listings
	RewriteCond %{THE_REQUEST} ^GET\s/immobilienangebote\/[^?\s]+
	RewriteRule ^immobilienangebote/(.*)$ immobilienangebote/angebot.php?slug=$1 [QSA]

	# Redirect old OnOffice interface
	RewriteRule ^assets/php/onoffice(.*)$ /immobilienangebote? [R=301,L]

</IfModule>

<IfModule mod_deflate.c>
	AddOutputFilterByType DEFLATE text/text text/html text/plain text/xml text/css application/x-javascript application/javascript
</IfModule>

# Make Font Loading available
Header add Access-Control-Allow-Origin "*"
Header add Access-Control-Allow-Headers "origin, x-requested-with, content-type"
Header add Access-Control-Allow-Methods "PUT, GET, POST, DELETE, OPTIONS"

# 404 Error Document
ErrorDocument 404 /404.html

# Redirect old CMS routes
Redirect 301 /index.php/ueber-uns http://www.bakirimmobilien.de/ueber
Redirect 301 /index.php/immobilienangebote http://bakirimmobilien.de/immobilienangebote
Redirect 301 /index.php/unsere-leistungen http://www.bakirimmobilien.de/leistungen
Redirect 301 /index.php/verwaltung http://www.bakirimmobilien.de/verwaltung
Redirect 301 /index.php/wertermittlung http://www.bakirimmobilien.de/wertermittlung
Redirect 301 /index.php/finanzierung http://www.bakirimmobilien.de/finanzierung
Redirect 301 /index.php/impressum http://www.bakirimmobilien.de/impressum
Redirect 301 /index.php/kontaktformular http://www.bakirimmobilien.de/kontakt
